<Window x:Class="PassMenager.Desktop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassMenager.Desktop"
        mc:Ignorable="d"
        Title="Login" Height="220" Width="476">
    <Grid Margin="0,0,1,1" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.009"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Label Content="Please enter masterpass: " HorizontalAlignment="Left" Margin="112,53,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="PassBox" HorizontalAlignment="Left" Margin="255,61,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Validate" HorizontalAlignment="Left" Height="36" Margin="158,92,0,0" VerticalAlignment="Top" Width="169" Click="Button_Click"/>

    </Grid>
</Window>
